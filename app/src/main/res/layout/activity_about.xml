<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Page"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This project is made in partial fulfillment of requirements of the fifth semester."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewAuthors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This project is made by Pragya Ravindrakumar Mugale, Shreyansh Gupta(1MV20CS105), and Uttam Bindal(1MV20CS120)."
        android:textSize="16sp" />

</LinearLayout>
