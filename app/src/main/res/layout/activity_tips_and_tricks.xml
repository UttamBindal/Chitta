<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tips and Tricks"
        android:textSize="20sp"
        android:textColor="@color/orangeText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip 1: Practice Mindfulness Meditation" />

    <TextView
        android:id="@+id/textViewTip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip 2: Engage in Regular Physical Exercise" />

    <TextView
        android:id="@+id/textViewTip3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip 3: Maintain a Healthy Diet" />

    <TextView
        android:id="@+id/textViewResourcesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:textColor="@color/orangeText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewResource1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resource 1: OpenAI Mental Health Resources" />

    <TextView
        android:id="@+id/textViewResource2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resource 2: National Alliance on Mental Illness" />

    <!-- Add more resources as needed -->

</LinearLayout>
